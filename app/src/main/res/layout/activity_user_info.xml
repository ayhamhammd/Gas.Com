<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInfoActivity"
    android:orientation="vertical"
    android:background="#00cccb"
    android:gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        />
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="15sp"
            android:textStyle="bold|normal"
            android:gravity="start"
            />
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_shap"
            android:ems="1"
            android:hint="Name"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#1c1c1c"
            android:textSize="20sp"
            android:textStyle="bold|normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="15sp"
            android:textStyle="bold|normal"
            android:gravity="left"
            />
        <EditText
            android:id="@+id/editLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_shap"
            android:ems="1"
            android:hint="city"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#1c1c1c"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <CheckBox
                android:id="@+id/customerCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a Customer"
                android:layout_marginRight="10dp"
                />
            <CheckBox
                android:id="@+id/sellerCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a Seller"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Of Gas Cylinders"
                android:textSize="15sp"
                android:textStyle="bold|normal"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/numberForSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/background_shap"
                android:ems="1"
                android:hint="ex.1"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#1c1c1c"
                android:textSize="20sp"
                android:textStyle="bold|normal" />
        </LinearLayout>


        <Button
            android:id="@+id/continueBtn2"
            android:text="Continue"
            android:textStyle="bold|normal"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:backgroundTint="#32bd38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>