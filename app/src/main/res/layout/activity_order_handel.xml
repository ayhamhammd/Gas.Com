<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderHandelActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#f2f7f4"
    >

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order details"
                        android:textColor="#4C4C4C"
                        android:textSize="15sp"
                        android:textStyle="bold|normal"
                        />
                    <TextView
                        android:id="@+id/orderID11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ASDFGHJKLASDFGHJKSDFGHJK"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:id="@+id/orderName123"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="20sp"
                        android:textStyle="bold|normal"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of gas cylinders"
                        android:textColor="#4C4C4C"
                        android:textSize="15sp"
                        android:textStyle="bold|normal"
                        android:layout_marginTop="10sp"
                        />
                    <TextView
                        android:id="@+id/CylinderNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="10"
                        android:textSize="25sp"

                        />
                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/calll"
                        android:layout_marginRight="20dp"
                        />
                        <Button
                            android:id="@+id/DeliveredBtn"
                            android:text="Delivered!"
                            android:textStyle="bold|normal"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            app:backgroundTint="#32bd38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            />
                        <ImageView
                            android:id="@+id/gotoMap"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/mappp"
                            android:layout_marginRight="20dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
</LinearLayout>
